<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.cabinet.transfer.fragments.BankNumberFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:startIconTint="?attr/colorPrimaryVariant"
        app:startIconDrawable="@drawable/ic_baseline_account_balance_24">
        <EditText
            android:id="@+id/edittext_bank_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Банковский номер"
            android:maxLines="1"
            android:lines="1"
            android:paddingBottom="@dimen/marginBottomEditText"
            />
    </com.google.android.material.textfield.TextInputLayout>

</FrameLayout>