<?xml version="1.0" encoding="utf-8"?>
<com.example.sber_practika.utils.views.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.cabinet.transfer.TransferBankCardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Выберите карту"
            android:elegantTextHeight="true"
            android:textSize="20sp"
            android:gravity="center"
            />

        <LinearLayout
            android:id="@+id/layout_of_bank_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_gravity="center"
            >
            <FrameLayout
                android:id="@+id/containerTransferBankCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconTint="?attr/colorPrimaryVariant"
                app:startIconDrawable="@drawable/ic_baseline_currency_ruble_24"
                app:endIconMode="clear_text"
                app:endIconTint="@color/green_700"
                >
                <EditText
                    android:id="@+id/edittext_transfer_value_bank_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Сумма"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:lines="1"
                    android:digits="0123456789"
                    android:inputType="phone"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnTransferBankCard"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Перевести"
                android:textColor="@android:color/primary_text_dark_nodisable"
                app:drawableLeftCompat="@drawable/ic_baseline_invisible_24"
                app:drawableRightCompat="@drawable/ic_baseline_send_24"
                app:drawableTint="@android:color/primary_text_dark_nodisable"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
    </LinearLayout>

</com.example.sber_practika.utils.views.NonFocusingScrollView>