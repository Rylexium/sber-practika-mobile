<?xml version="1.0" encoding="utf-8"?>
<com.example.sber_practika.utils.views.NonFocusingScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    tools:context=".activity.auth.LoginActivity"
    android:id="@+id/main_layout_login"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Как будем авторизовываться?"
            android:elegantTextHeight="true"
            android:gravity="center"
            android:textSize="18dp"
            android:paddingBottom="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_gravity="center"
            >
            <FrameLayout
                android:id="@+id/containerLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconTint="?attr/colorPrimaryVariant"
                app:startIconDrawable="@drawable/ic_baseline_https_24"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/green_700"
                >
                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Пароль"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:lines="1"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/button_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Войти"
                android:textColor="@android:color/primary_text_dark_nodisable"
                app:drawableLeftCompat="@drawable/ic_baseline_invisible_24"
                app:drawableRightCompat="@drawable/ic_baseline_send_24"
                app:drawableTint="@android:color/primary_text_dark_nodisable"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textLoginByUsername"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/logInUsername"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="9dp"
                />

            <TextView
                android:id="@+id/textLoginByPhone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:text="@string/logInPhone"
                android:textSize="16sp"
                android:paddingTop="15dp"
                />

            <TextView
                android:id="@+id/textLoginByBankCard"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/logInBankCard"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="15dp"
                />

            <TextView
                android:id="@+id/textRememberPassword"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/rememberPassword"
                android:elegantTextHeight="true"
                android:gravity="center"
                android:textSize="16sp"
                android:paddingTop="15dp"
                />
        </LinearLayout>
    </LinearLayout>

</com.example.sber_practika.utils.views.NonFocusingScrollView>