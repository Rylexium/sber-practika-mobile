<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sber_practika">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:noHistory="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sberpractika">
        <activity
            android:name=".activity.cabinet.transactions.TransactionTransferActivity"
            android:exported="false" />
        <activity
            android:name=".activity.cabinet.transfer.TransferBankCardActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.cabinet.transfer.TransferBankNumberActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.cabinet.CabinetActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.auth.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>